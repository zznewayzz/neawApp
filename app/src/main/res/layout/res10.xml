<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/test"
    android:weightSum="1">

    <ImageView
        android:layout_width="192dp"
        android:layout_height="215dp"
        android:id="@+id/imageView4"
        android:src="@drawable/rac11"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.08" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="156dp"
        android:background="#a8ffffff"
        android:layout_weight="0.09"
        android:weightSum="1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ร้าน ชาบูอินดี้ ขอนแก่น (Shabu Indy) ขอนแก่น"
            android:id="@+id/textView5"
            android:layout_gravity="center_horizontal"
            android:textSize="30dp"
            android:textColor="#dffe1e3c" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="สุกี้ ชาบู บุพเฟ่ต์"
            android:id="@+id/textView6"
            android:layout_gravity="center_horizontal"
            android:textSize="25dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ศูนย์กาญจนาฯ"
            android:id="@+id/textView7"
            android:layout_gravity="center_horizontal"
            android:textSize="18dp"
            android:layout_weight="0.21" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:text="Facebook"
            android:id="@+id/button"
            android:layout_gravity="center_horizontal"
            android:background="#167bff"
            android:textColor="#ffffff" />
    </LinearLayout>

</LinearLayout>