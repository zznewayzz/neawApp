<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/test">

    <ImageView
        android:layout_width="240dp"
        android:layout_height="212dp"
        android:id="@+id/imageView4"
        android:src="@drawable/rac7"
        android:layout_gravity="center_horizontal" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="156dp"
        android:background="#a8ffffff">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mama Big"
            android:id="@+id/textView5"
            android:layout_gravity="center_horizontal"
            android:textSize="30dp"
            android:textColor="#dffe1e3c" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="อาหารอิตาเลี่ยน อาหารจานเดียว ตามสั่ง เบเกอรี่ เค้ก"
            android:id="@+id/textView6"
            android:layout_gravity="center_horizontal"
            android:textSize="25dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="กังสดาล"
            android:id="@+id/textView7"
            android:layout_gravity="center_horizontal"
            android:textSize="18dp" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:text="Facebook"
            android:id="@+id/button"
            android:layout_gravity="center_horizontal"
            android:background="#167bff"
            android:textColor="#ffffff" />
    </LinearLayout>

</LinearLayout>